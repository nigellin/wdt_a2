@model IEnumerable<Hospital.Models.Visit>

@Html.ValidationSummary()

<br />

@if (Model == null){
}else if (Model.Count() < 1){
    <div class="validation-summary-errors">No visit been found</div>
}else{
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor.Name)
            </th>
			<th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(ModelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => item.Patient.Name)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => item.Doctor.Name)
                </td>
				<td>
					@Html.ActionLink("View", "Details", new { id = item.Id }) |
					@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id })					
				</td>
            </tr>
        }

    </table>
}