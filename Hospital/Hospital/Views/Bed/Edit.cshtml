@model Hospital.Models.Bed

<!--allows transefer of data from control to view-->
@{
    ViewBag.Title		= "Edit Bed Details";
	ViewBag.Action		= "Edit";
	ViewBag.ButtonValue	= "Save";
	ViewBag.HeaderText	= @Html.DisplayNameFor(model => model.Id)+ " "+
		@Html.DisplayFor(model => model.Id);
}

<!-- partial view is recieved from the _Form file-->
@Html.Partial("_Form")

<!--creating a back to list link that goes to page index-->
@Html.ActionLink("Back to List", "Index")

<!--using the jqueryval script -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
