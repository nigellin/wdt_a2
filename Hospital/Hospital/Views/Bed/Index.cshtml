@model IEnumerable<Hospital.Models.Bed>

<!-- main page of the bed list-->
@{
    ViewBag.Title = "Bed List";
}

<!-- gives a page header that is styled with bootstrap-->
<h2 class="page-header">Bed List</h2>

<!-- creating links to create a new bed-->
@Html.ActionLink("New", "Create", "Bed", null, new { @class="btn btn-primary btn-sm" })

<br />
<br />

<!--arraning data into a table which is rendered with bootstrap-->
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayName("Actions")
		</th>
    </tr>

    <!--for each loop to print data sequentially-->
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
		<td>
            <!--creating links for bed, View, Edit and Delete-->
			@Html.ActionLink("View", "Details", new { id=item.Id }) |
			@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
			@Html.ActionLink("Delete", "Delete", new { id=item.Id })
		</td>
    </tr>
}

</table>

