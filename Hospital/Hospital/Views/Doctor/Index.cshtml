@model IEnumerable<Hospital.Models.Doctor>

<!--home page of the doctor list/collection-->
@{
    ViewBag.Title = "Doctor List";
}

<!--heading Doctor list-->
<h2>Doctor List</h2>

@Html.ActionLink("New", "Create", "Doctor", null, new { @class="btn btn-primary btn-sm" })

<br />
<br />

<!--table for displaying doctors information-->
<table class="table table-striped">
    <tr>
		<th>
			@Html.DisplayNameFor(model => model.Id)
		</th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
		<th>
			@Html.DisplayName("Actions")
		</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
		<td>
            <!--links to modify doctor information-->
			@Html.ActionLink("View", "Details", new { id=item.Id }) |
			@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
			@Html.ActionLink("Delete", "Delete", new { id=item.Id })
			&nbsp;&nbsp;&nbsp;
			@Html.ActionLink("History", "History", new { id= item.Id })
		</td>
    </tr>
}

</table>
